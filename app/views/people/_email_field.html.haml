- if controller.permitted_attrs.include?(:email) && can?(:update_email, entry)
  = f.labeled_input_field :email, help_inline: t('.used_as_login'), class: 'd-inline form-control form-control-sm'
- else
  = f.labeled(:email) do
    %p.form-control-plaintext= entry.email
    = f.help_block(t('.only_changeable_by_superior'))
