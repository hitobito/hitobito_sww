-# locals: (f:)

- [:first_name, :last_name].each do |attr|
  - if event.show_contact_attr?(attr)
    - if controller.permitted_attrs.include?(attr)
      = f.labeled_input_field(attr)
    - else
      = f.labeled(attr) do
        %p.form-control-plaintext= entry.send(attr)
